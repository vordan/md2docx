{
  "manifest_version": 3,
  "name": "MD2DOCX Converter",
  "version": "1.0.1",
  "description": "Convert Markdown files to professional Word documents with rich formatting. Based on work by nkittleson.",
  "author": "vordan",
  "homepage_url": "https://github.com/vordan/md2docx",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "MD2DOCX Converter",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
} 